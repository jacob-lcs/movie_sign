/* pages/index/detail/index.wxss */
@import "../../../style/weui.wxss";

page {
  background-color: #fff;
}

.node_wrap {
  position: absolute;
  top: 354rpx;
  display: block;
  background-color: black;
  width: 100%; 
  border-radius: 50rpx 50rpx 0 0;
  color: white;
}

.Title {
  font-weight: bold;
  margin-top: 32rpx;
  padding: 0rpx 40rpx;
}

.titles {
  display: flex;
  margin: 30rpx 40rpx 60rpx 40rpx;
}

.titles image {
  /* flex: 0 0 60rpx; */
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.titles view {
  display: flex;
  flex-direction: column;
  height: 100rpx;
}

.author {
  padding: 0;
  line-height: 0.7;
  margin-left: 25rpx;  
}

.author {
  font-size: 25px;
}

.zans{
  margin-top: 15rpx;
  color: white;
  font-size: 13px;
}

.timer {
  margin-top: 40rpx;
  margin-right: 40rpx;
  text-align: right;
  font-size: 13px;
  color: white;
}

.text_content{
  margin-left: 40rpx;
  margin-right: 30rpx;
}

.foot {
  display: flex;
  flex-direction: row-reverse;
  margin: 30rpx 40rpx 60rpx 40rpx;
}

.foot image {
  /* flex: 0 0 60rpx; */
  margin-left: 30rpx;
  width: 70rpx;
  height: 70rpx;
}

.nodeStyle {
  position: relative;
  display: block;
  background-color: #fff;
  margin: 50rpx 0;
}

.imgStyle {
  margin: 20rpx 0;
}

.textStyle {
  margin: 40rpx;
}

.h2Style{
  margin: 60rpx 40rpx 20rpx 40rpx;
}

.fimgStyle{
  max-width: calc(100% - 80rpx);
  margin: 10rpx 40rpx;
}

.titleImage{
  /* background-image: linear-gradient(to bottom,#20B2AA,white); */
   background-image: url('https://6d6f-movie-cf8bc1-1258251683.tcb.qcloud.la/image/beijing_4.jpg?sign=c6b69fba63d44d44d81b5aec2621ed98&t=1544720551');
  background-size: 1300rpx;
  /* width: 100vw; */
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-repeat:no-repeat;
  background-position: center;
}

